<h1>Check client's name to add them to <%= @event.name%></h1>
<h3>Registered Clients</h3>
<% form_for(@client_event) do |f| %>
	<% @clients.each do |client|%>
		<%= check_box_tag "client_ids[]", client.id%>	
		<%= link_to "#{client.first_name} #{client.last_name}", client %><br/>
	<%end%>
	<%= hidden_field :event, :id %>
    <p><%= f.submit 'Create' %></p>
<%end%>


<%= link_to 'Back', @event %>