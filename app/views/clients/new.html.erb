<h1>New client</h1>

<% form_for(@client) do |f| %>
  <%= f.error_messages %>



<p><%= label_tag 'First Name' %><br/>
<%= f.text_field :first_name %><br/>
<%= label_tag 'Last Name' %><br/>
<%= f.text_field :last_name %></p>

<p><%= label_tag 'Address Line 1' %><br/>
<%= f.text_field :address1 %><br/>

<%= label_tag 'Address Line 2' %><br/>
<%= f.text_field :address2 %><br/>
<%= label_tag 'City' %><br/>
<%= f.text_field :city %></p>

<p><%= label_tag 'State' %>
<%= f.text_field :state, :size=> 3 %>

<%= label_tag 'Zip' %>
<%= f.text_field :zip_code, :size=>4 %></p>

<p><%= label_tag 'Phone Number' %><br/>
<%= f.text_field :phone_num %></p>

<p><%= label_tag 'Email' %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'Date Joined' %><br/>
<%= f.date_select :join_date %></p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', clients_path %>