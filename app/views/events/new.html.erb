<h1>New event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>





<p><%= label_tag 'Event Name' %><br/>
<%= f.text_field :name %><br/>


<p><%= label_tag 'Location' %><br/>
<%= f.text_field :location %></p>

<%= label_tag 'Date' %>
<%= f.date_select :date %></p>
<p><%= label_tag 'Description' %><br/>
<%= f.text_area :description, :size => "60x12" %></p>



  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

