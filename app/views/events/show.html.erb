
<h1><%= @event.name%></h1>
<p><b>Date:</b> <%= @event.date.month%>/<%=  @event.date.day%>/<%= @event.date.year%></p>
<p><b>Location:</b> <%= @event.location%>,</p>
<p><b>Description</b> <%= @event.description%></p>
<b><%= link_to "add new volunteers", event_volunteer_path %></b><br>
<h3>Volunteers</h3>
<% @event.volunteers.each do |volunteer|%>
<%= link_to "#{volunteer.first_name} #{volunteer.last_name}", volunteer %><br>
<%end%>

<b><%= link_to "add new clients", event_client_path %></b><br>

<h3>Clients</h3>
<% @event.clients.each do |client|%>
<%= link_to "#{client.first_name} #{client.last_name}", client %><br>
<%end%>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>