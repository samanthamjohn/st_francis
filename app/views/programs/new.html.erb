<h1>New program</h1>

<% form_for(@program) do |f| %>
<%= f.error_messages %>

<p><%= label_tag 'Program Name' %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag 'Description' %><br/>
<%= f.text_area :description, :size => "60x12" %></p>



<p><%= label_tag 'Program Start Date' %><br/>
<%= f.date_select :start_date %></p>

<p><%= label_tag 'Number of Participants' %><br/>
<%= f.text_field :num_participants %></p>


<p><%= f.submit 'Create' %></p>
<% end %>

<%= link_to 'Back', programs_path %>
