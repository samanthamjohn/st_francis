<h1>New volunteer</h1>

<% form_for(@volunteer) do |f| %>
  <%= f.error_messages %>





<p><%= label_tag 'First Name' %><br/>
<%= f.text_field :first_name %><br/>
<%= label_tag 'Last Name' %><br/>
<%= f.text_field :last_name %></p>

<p><%= label_tag 'Phone Number' %><br/>
<%= f.text_field :phone_num %></p>

<p><%= label_tag 'Email' %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'Date Joined' %><br/>
<%= f.date_select :join_date %></p>




  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', volunteers_path %>

